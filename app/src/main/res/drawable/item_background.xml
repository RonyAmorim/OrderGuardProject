<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Configuração do fundo -->
    <solid android:color="#FFFFFF" /> <!-- Fundo branco -->

    <!-- Configuração das bordas -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- Borda cinza clara -->

    <!-- Configuração dos cantos arredondados -->
    <corners android:radius="8dp" />

    <!-- Configuração de padding interno -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
