<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_client_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente #1234"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue" />

        <TextView
            android:id="@+id/tv_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: JoÃ£o Silva"
            android:textSize="14sp"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_client_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: joao.silva@example.com"
            android:textSize="14sp"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_client_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone: (11) 99999-9999"
            android:textSize="14sp"
            android:textColor="@color/primary_text" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
