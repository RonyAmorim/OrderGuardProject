<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome do Serviço -->
        <TextView
            android:id="@+id/tv_service_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serviço"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:hint="Digite o nome do serviço"
            android:padding="12dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <!-- Custo -->
        <TextView
            android:id="@+id/tv_service_cost_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Custo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_service_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:hint="Digite o custo"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <!-- Quantidade -->
        <TextView
            android:id="@+id/tv_service_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Quantidade"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_service_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:hint="Digite a quantidade"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <!-- Botão de Deletar -->
        <ImageButton
            android:id="@+id/btn_delete_service"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Remover Serviço"
            android:src="@drawable/baseline_delete_24"
            app:tint="@color/primary_red" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
